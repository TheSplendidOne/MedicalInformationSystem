@model Hospital

<div class="block-info">
    <h4>@(Model.Name)</h4>
    <div class="d-flex flex-row">
        <label class="profile-label" style="min-width: 100px;">Description:</label>
        <label>@Model.Description</label>
    </div>
    <div class="d-flex flex-row">
        <label class="profile-label" style="min-width: 100px;">Address:</label>
        <label>@Model.Address</label>
    </div>
    <div class="d-flex flex-row">
        <a class="btn btn-primary" asp-controller="HospitalProfile" asp-action="Index" asp-route-hospitalId="@Model.Id">Profile</a>
    </div>
</div>