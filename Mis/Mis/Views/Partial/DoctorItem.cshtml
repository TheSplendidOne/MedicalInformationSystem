@model DoctorInfo

<div class="block-info">
    <h4>@(Model.User.LastName + " " + Model.User.FirstName + " " + Model.User.MiddleName)</h4>
    @if (Model.User != null)
    {
        <div class="d-flex flex-row">
            <label class="profile-label" style="min-width: 100px;">About:</label>
            <label>@Model.User.About</label>
        </div>
    }
    <div class="d-flex flex-row">
        <label class="profile-label" style="min-width: 100px;">Position:</label>
        <label>@Model.Position</label>
    </div>
    @if (Model.Hospital != null)
    {
        <div class="d-flex flex-row">
            <label class="profile-label" style="min-width: 100px;">Hospital:</label>
            <label>@Model.Hospital.Name</label>
        </div>
    }
    <div class="d-flex flex-row">
        <a class="btn btn-primary" asp-controller="Profile" asp-action="Index" asp-route-userId="@Model.UserId">Profile</a>
    </div>
    
</div>
