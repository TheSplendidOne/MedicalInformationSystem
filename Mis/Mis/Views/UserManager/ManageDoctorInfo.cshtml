@using Mis.Data
@inject ApplicationDbContext DbContext
@model DoctorInfo
@{
    ViewData["Title"] = "ManageDoctorInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2>Manage Doctor Info</h2>
                    Edit doctor info for User / @ViewBag.UserName.
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label>Position</label>
                        <input asp-for="@Model.Position" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Hospital</label>
                        <select asp-for="@Model.HospitalId" class="form-control">
                            @foreach (var hospital in DbContext.Hospital.ToList())
                            {
                                <option value="@hospital.Id">@hospital.Name</option>
                            }
                        </select>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <div class="card-footer">
                    <input type="submit" value="Update" class="btn btn-primary" style="width: auto" />
                    <a asp-action="Index" class="btn btn-primary" style="width: auto">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>