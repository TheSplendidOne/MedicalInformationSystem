@using Mis.Models
@model FindDoctorViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="block-info">
    <h2>Find a Doctor</h2>
</div>

<form asp-controller="FindDoctor" asp-action="Find" method="get">
    <div>
        <hr/>
        <div class="row">
            <div class="col-md-3">
                <div class="block-info">
                    <div class="card">
                        <div class="card-body">
                            <div class="form-group">
                                <label>First name</label>
                                <input asp-for="@Model.FirstName" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Last name</label>
                                <input asp-for="@Model.LastName" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Hospital name</label>
                                <input asp-for="@Model.HospitalName" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Position</label>
                                <input asp-for="@Model.Position" class="form-control">
                            </div>
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                        <div class="card-footer">
                            <input type="submit" value="Update" class="btn btn-primary" style="width: auto"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                @foreach (var doctor in Model.Doctors)
                {
                    await Html.RenderPartialAsync("~/Views/Partial/DoctorItem.cshtml", doctor);
                }
            </div>
        </div>
    </div>
</form>
