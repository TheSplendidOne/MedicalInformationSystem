@using Mis.Models
@model Hospital
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <div class="block-info">
                <h2>@(Model.Name)</h2>
            </div>
            <div class="d-flex flex-column">
                <div class="block-info">
                    @Model.Description
                </div>
                <div class="block-info">
                    <div class="d-flex flex-row">
                        <label class="profile-label" style="min-width: 100px;">Address:</label>
                        <label>@Model.Address</label>
                    </div>
                </div>
                @foreach (var doctor in Model.Doctors)
                {
                    await Html.RenderPartialAsync("~/Views/Partial/DoctorItem.cshtml", doctor);
                }
            </div>
        </div>
        <div class="col-md-4">

        </div>
    </div>
</div>