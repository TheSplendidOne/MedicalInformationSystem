@model Hospital
@{
    ViewData["Title"] = "ManageHospital";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2>Manage Hospital</h2>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label>Name</label>
                        <input asp-for="@Model.Name" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <input asp-for="@Model.Address" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea asp-for="@Model.Description" class="form-control"></textarea>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <div class="card-footer">
                    <input type="submit" value="Update" class="btn btn-primary" style="width: auto" />
                    <a asp-action="Index" class="btn btn-primary" style="width: auto">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>