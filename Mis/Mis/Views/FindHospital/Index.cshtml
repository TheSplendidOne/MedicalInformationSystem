@using Mis.Models
@model FindHospitalViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="block-info">
    <h2>Find a Hospital</h2>
</div>

<form asp-controller="FindHospital" asp-action="Find" method="get">
    <div>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <div class="block-info">
                    <div class="card">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Hospital name</label>
                                <input asp-for="@Model.Name" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Address</label>
                                <input asp-for="@Model.Address" class="form-control">
                            </div>
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                        <div class="card-footer">
                            <input type="submit" value="Update" class="btn btn-primary" style="width: auto" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                @foreach(var hospital in Model.Hospitals)
                {
                    await Html.RenderPartialAsync("~/Views/Partial/HospitalItem.cshtml", hospital);
                }
            </div>
        </div>
    </div>
</form>
