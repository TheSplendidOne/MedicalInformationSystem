@page
@model Mis.Areas.Identity.Pages.Account.Manage.EditDoctorInfoModel
@{
    ViewData["Title"] = "Edit doctor info";
    ViewData["ActivePage"] = ManageNavPages.EditDoctorInfo;
}

<h4>@ViewData["Title"]</h4>
<form id="profile-form" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Position"></label>
                <input asp-for="Input.Position" class="form-control" disabled />
                <span asp-validation-for="Input.Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Hospital"></label>
                <input asp-for="Input.Hospital" class="form-control" disabled>
                <span asp-validation-for="Input.Hospital" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}